#
# Parlance environment template
# Copy to `.env` and adjust values to point at your infrastructure.
#

# Base URLs for services that Parlance connects to
DEFAULT_OLLAMA_URL=http://localhost:11434
DEFAULT_SEARX_URL=http://localhost:8080
DEFAULT_SEARX_ALLOW_INSECURE=false

# Server runtime configuration
STT_URL=http://stt:8000/transcribe
TTS_URL=http://tts:8600/speak
TTS_ENABLED=true
CORS_ORIGIN=http://localhost:5173

# Whisper (speech-to-text) container
WHISPER_MODEL=base
WHISPER_COMPUTE=auto

# Kokoro (text-to-speech) container
KOKORO_MODEL_ID=onnx-community/Kokoro-82M-v1.0-ONNX
KOKORO_DEVICE=cpu
KOKORO_DTYPE=q8
KOKORO_VOICE=af_heart

# Front-end build target (used by Docker)
VITE_API_BASE=http://localhost:8787
